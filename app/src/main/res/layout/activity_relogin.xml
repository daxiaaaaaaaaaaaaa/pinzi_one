<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/widget_size_40"
        android:layout_marginRight="@dimen/widget_size_40"
        android:background="@drawable/shape_button_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/widget_size_10"
            android:text="温馨提示"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_16"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/widget_size_18"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="@dimen/widget_size_15"
            android:paddingRight="@dimen/widget_size_15"
            android:text="您的账号登录已失效，请重新登录"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/font_size_15"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/widget_size_20"
            android:layout_marginRight="16dp"
            android:background="@color/color_background"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/widget_size_16"
            android:paddingBottom="@dimen/widget_size_18">

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_40"
                android:layout_marginLeft="@dimen/widget_size_60"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/widget_size_60"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_login_normal"
                android:gravity="center"
                android:text="重新登录"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_14"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
