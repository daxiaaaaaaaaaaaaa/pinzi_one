<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_item_order_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingBottom="20dp">

        <TextView
            android:lineSpacingExtra="2dp"
            android:id="@+id/tv_item_order_track_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_c71233"
            android:textSize="15sp"
            tools:text="订单已签收，期待再次为您服务" />

        <TextView
            android:layout_below="@+id/tv_item_order_track_content"
            android:id="@+id/tv_item_order_track_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_c71233"
            android:textSize="13sp"
            tools:text="2017-04-01 12:00:00" />
    </RelativeLayout>

</LinearLayout>