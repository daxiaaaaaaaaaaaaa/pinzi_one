<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/widget_size_15"
        android:paddingTop="@dimen/widget_size_15"
        android:paddingRight="@dimen/widget_size_15"
        android:paddingBottom="@dimen/widget_size_15">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="关于XXXXXX的问卷调查"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_size_16"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_5"
            tools:text="2019-01-01"
            android:textColor="@color/color_text_dark"
            android:textSize="@dimen/font_size_13"/>
    </LinearLayout>

</LinearLayout>
