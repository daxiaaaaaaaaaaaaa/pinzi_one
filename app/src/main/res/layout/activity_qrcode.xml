<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_line"
              android:orientation="vertical">

    <include
        layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_160"
            android:background="@drawable/image_good_test"/>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/widget_size_300"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/shape_white_8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qcode"
                android:layout_width="@dimen/widget_size_220"
                android:layout_height="@dimen/widget_size_220"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/widget_size_28"
                android:layout_marginBottom="@dimen/widget_size_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/font_size_20"
                android:text="展示我的二维码"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_size_16"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
