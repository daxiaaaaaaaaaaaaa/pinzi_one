<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_line"
              android:orientation="vertical"
              tools:context=".ui.main.ShopDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_black"
        android:orientation="vertical"
        android:paddingTop="36dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/color_black"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/iv_shop_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:src="@drawable/image_back"/>

            <EditText
                android:id="@+id/et_shop_detail_search_name"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="64dp"
                android:layout_toRightOf="@id/iv_shop_detail_back"
                android:background="@drawable/shape_search"
                android:hint="输入商品关键词"
                android:imeOptions="actionSearch"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/iv_shop_detail_forward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/image_home_share"
                android:textColor="@color/color_white"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@id/iv_shop_detail_back"
                android:src="@drawable/image_search"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_shop_detail_shop_head"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/iv_default_head"/>

            <LinearLayout
                android:id="@+id/ll_shop_detail_shop_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_shop_detail_shop_head"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_detail_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_303030"
                    android:textSize="16sp"
                    tools:text="茂盛酒业旗舰店"/>

                <TextView
                    android:id="@+id/tv_shop_detail_shop_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    tools:text="22w人关注"/>

                <TextView
                    android:id="@+id/tv_shop_detail_shop_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    tools:text="评价：4.5分"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shop_detail_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_round_red_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_detail_add_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3dp"
                    android:text="+关注"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@color/color_e0e0e0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/iv_shop_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="26dp"
                android:src="@drawable/icon_location"/>

            <TextView
                android:id="@+id/tv_shop_detail_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/iv_shop_detail_location"
                android:text="商家地址："
                android:textColor="@color/color_999999"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_shop_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/tv_shop_detail_address_label"
                android:textColor="@color/color_999999"
                android:textSize="15sp"
                tools:text="深圳市南山区粤美特街道"/>

            <TextView
                android:id="@+id/tv_shop_detail_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop_detail_address"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_shop_detail_location"
                android:text="电话："
                android:textColor="@color/color_999999"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_shop_detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop_detail_address"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_shop_detail_phone_label"
                android:textColor="@color/color_999999"
                android:textSize="15sp"
                tools:text="0755-74839289"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_has_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_marginBottom="60dp"
            android:id="@+id/rv_shop_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_join_shopCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ok_red"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="加入购物车"
            android:textColor="@color/color_white"
            android:textSize="16sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_shop_detail_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_data"
            android:layout_width="115dp"
            android:layout_height="88dp"
            android:layout_centerInParent="true"
            android:src="@drawable/image_no_data"/>

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_no_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="暂无数据"
            android:textColor="#989898"/>
    </RelativeLayout>
</LinearLayout>