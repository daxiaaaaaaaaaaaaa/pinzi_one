<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".ui.friends.SelectImageActivity">

    <include
        layout="@layout/layout_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select_image"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select_image_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="已选择1/4"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/color_bebebe"
            android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/btn_select_image_confirm"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:textColor="@color/color_white"
            android:textSize="13dp"
            android:background="@color/color_c71233"
            android:text="完成"/>

    </LinearLayout>

</LinearLayout>