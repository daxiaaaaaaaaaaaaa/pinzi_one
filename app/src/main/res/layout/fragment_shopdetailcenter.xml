<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/widget_size_15"
                android:paddingTop="@dimen/widget_size_15"
                android:paddingBottom="@dimen/widget_size_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop_detail_address_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品评价："
                        android:textColor="@color/color_text"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@id/tv_shop_detail_address_label"
                        android:textColor="@color/color_999999"
                        android:textSize="15sp"
                        tools:text="4.5分"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="营业时间："
                        android:textColor="@color/color_text"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_999999"
                        android:textSize="15sp"
                        tools:text="8：00 ~ 20：00"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_size_15"
                    android:gravity=""
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="商家地址："
                        android:textColor="@color/color_text"
                        android:textSize="15sp"/>

                    <TextView
                        android:drawablePadding="20dp"
                        android:id="@+id/tv_shop_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="@dimen/widget_size_10"
                        android:drawableRight="@drawable/image_location_target"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_999999"
                        android:textSize="15sp"
                        tools:text="深圳市南山区粤美特街道"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="电话："
                        android:textColor="@color/color_text"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_shop_detail_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_main_select"
                        android:textSize="15sp"
                        tools:text="0755-74839289"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/widget_size_10"
                        android:src="@drawable/image_shop_call"/>
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            </android.support.v7.widget.RecyclerView>


            <cn.jzvd.JzvdStd
                android:id="@+id/iv_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_196"
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_marginTop="@dimen/widget_size_15"
                android:layout_marginRight="@dimen/widget_size_15"
                android:scaleType="fitXY"
                android:visibility="gone"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
