<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
              android:padding="@dimen/widget_size_15"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一题：请问您觉得瓶子城这个APP怎么样？（单选）"
        android:textColor="@color/color_text"
        android:textSize="@dimen/font_size_14"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/widget_size_15"
        android:background="@color/color_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/widget_size_16"
            android:layout_height="@dimen/widget_size_16"
            android:src="@drawable/image_checked"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:text="很不错"
            android:textColor="@color/color_text"
            android:textSize="@dimen/widget_size_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/widget_size_16"
            android:layout_height="@dimen/widget_size_16"
            android:src="@drawable/image_uncheck"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:text="还可以"
            android:textColor="@color/color_text"
            android:textSize="@dimen/widget_size_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/widget_size_16"
            android:layout_height="@dimen/widget_size_16"
            android:src="@drawable/image_uncheck"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:text="一般"
            android:textColor="@color/color_text"
            android:textSize="@dimen/widget_size_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/widget_size_16"
            android:layout_height="@dimen/widget_size_16"
            android:src="@drawable/image_uncheck"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:text="很不错"
            android:textColor="@color/color_text"
            android:textSize="@dimen/widget_size_14"/>

    </LinearLayout>


</LinearLayout>
