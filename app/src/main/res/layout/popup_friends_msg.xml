<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="40dp"
    android:background="@drawable/shape_friends_msg_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_popup_friends_msg_like"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/image_home_fabulous_active" />
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_white"
            android:text="点赞"/>
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/ll_popup_friends_msg_comment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/image_home_comment" />
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_white"
            android:text="评论"/>
    </LinearLayout>

</LinearLayout>